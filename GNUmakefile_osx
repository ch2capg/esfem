${PROG1_name}: CXXFLAGS +=
${PROG1_name}: CPPFLAGS += 
${PROG1_name}: LDFLAGS += # $(addprefix -L${BUILD_DIR}/, lib) -l${LIB1}

# ------------------------------------------------------------
