               $(patsubst %.cpp, %.o, \
                 $(notdir ${PROG1_SRC})))
-include $(patsubst %.o, %.d, ${PROG1_obj})

PROG1_bin := ${BUILD_DIR}/bin/${PROG1_name}

${PROG1_name}: ${PROG1_bin}
${PROG1_bin}: ${PROG1_obj}
	${CXX} ${CXXFLAGS} ${CPPFLAGS} ${LDFLAGS} -o $@ $^

