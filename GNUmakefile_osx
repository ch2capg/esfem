#----------------------------------------------------------------------
# pattern rules

${BUILD_DIR}/obj/%.o:		${PROJECT_DIR}/src/%.cpp
	${CXX} $< ${CXXFLAGS} ${CPPFLAGS} ${LDFLAGS} -MMD -c -o $@ 
${BUILD_DIR}/obj/%_pic.o:	${PROJECT_DIR}/src/%.cpp
	${CXX} $< ${CXXFLAGS} ${CPPFLAGS} ${LDFLAGS} -fPIC -MMD -c -o $@ 
${BUILD_DIR}/obj/%_test.o:		${PROJECT_DIR}/test/%.cpp
	${CXX} $< ${CXXFLAGS} ${CPPFLAGS} ${LDFLAGS} -MMD -c -o $@ 
